@import '../common.styl'

.activity
    position: absolute
    left: 0
    right: 0
    top: 0
    bottom: 0
    display: flex
    flex-direction: column


.map
    width: 100%
    flex-basis: 100%

.header
    box-sizing: border-box
    padding: 20px
    line-height: 30px
    font-size: 25px
    // из-за flex
    min-height: 70px
    +maxWidth(400px)
        padding: 10px
        font-size: 20px
        line-height: 25px
        min-height: 45px

.trackLines
    min-height: 50%
    margin-top: 30px
