@import '../common.styl'

.button
    display: block
    border-radius: 4px
    background-color: action-color
    color: white-color
    text-align: center
    padding: 10px 15px
    cursor: pointer
    shadow: default
    text-decoration: none
    &:hover
        background-color: action-color-hover
    &:active
        background-color: action-color
        shadow: active
