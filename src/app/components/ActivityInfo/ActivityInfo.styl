@import '../common.styl'

.activityInfo
    position: relative

.image
    position: absolute
    left: 0
    right: 0
    top: -44px
    bottom: 7px
    opacity: 0.5
    background-repeat: no-repeat
    background-position: center center
    background-size: cover
    border-radius: 4px

.activityInfo + .activityInfo .image
    top: -7px

.activityInfo:last-child .image
    bottom: 0

.params
    position: relative
    padding: 5px 0
    text-align: center
    display: flex
    flex-wrap: wrap
    justify-content: center
    color: #202020
    .option
        padding: 0 0 10px
        width: 50%
    .optionValue
        display: flex
        justify-content: center
    .optionTitle
        margin-top: -5px
        display: flex
        justify-content: center

.buttons
    position: relative
    padding: 15px 0 5px
    display: flex
    justify-content: center
    .activityBtn
        margin-right: 10px
